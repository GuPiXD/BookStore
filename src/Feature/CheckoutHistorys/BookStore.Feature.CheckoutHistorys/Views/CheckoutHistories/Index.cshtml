@{
  ViewData["Title"] = "Index";
}

<h2>History</h2>

<table id="checkouthistories" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Book Title</th>
      <th>Checkout Date</th>
      <th>Return Date</th>
    </tr>
  </thead>
   @foreach (var history in Model)
   {
       <tr>
         <td>@history.Client.FullName</td>
         <td>@history.Book.Title</td>
         <td>@history.CheckoutDate</td>
         @{ 
            var returndate = (history.ReturnDate == null ? "-" : history.ReturnDate.ToString());
            <td>@returndate</td>
          }
       </tr>
   }
</table>

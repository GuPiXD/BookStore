
@model BookStore.Feature.Clients.Models.FormViewModel

@{
  ViewData["Title"] = "ClientForm";
}



@{
    if (Model.Id == "0")
    {
        <h2>New Client</h2>
    }
    else
    {
        <h2>Edit Client</h2>
    }
}
@using (Html.BeginForm("Save", "Clients"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.FirstName)
        @Html.TextBoxFor(c => c.FirstName,new { @class = "form-control", placeholder = "John" })
        @Html.ValidationMessageFor(c => c.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.LastName)
        @Html.TextBoxFor(c => c.LastName, new { @class = "form-control", placeholder = "Doe" })
        @Html.ValidationMessageFor(c => c.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Address)
        @Html.TextBoxFor(c => c.Address, new { @class = "form-control", placeholder = "Country, County/State/Region, City, etc." })
        @Html.ValidationMessageFor(c => c.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Email)
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", placeholder = "john.doe@default.com" })
        @Html.ValidationMessageFor(c => c.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Phone)
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", placeholder = "8 (812) 555-55-55" })
        @Html.ValidationMessageFor(c => c.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Job)
        @Html.TextBoxFor(c => c.Job, new { @class = "form-control", placeholder = "Default developer" })
        @Html.ValidationMessageFor(c => c.Job)
    </div>
    @Html.HiddenFor(c => c.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}